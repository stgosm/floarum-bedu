extends ../layout

block content
  div.row
    div.col-md-12
      h1.login-title Create your thread
      div.alert.alert-info Please try to search for your question first using the <a href="/">search box</a> and make sure you've read our forum rules before creating a thread.
  div.row
    div(class="col-md-12")
      form(method="POST", action="/publication")
        div.form-group
          label Subject
          input(type="text", name="title", class="form-control")
          small(class="form-text text-muted") Maximum 60 characters
        div.form-group
          label Body
          div(id="editor", class="form-control")
          textarea(id="textarea-content", name="content", class="d-none form-control")
          small(class="form-text text-muted") Describe your problem as clearly as possible
        div.form-group
          label Tags
          select(id="slim-multi-select", multiple=true, name="tags")
            each tag in tags
              option(value=tag.name) #{tag.name}
        div.form-group
          button(class="btn btn-info mr-2") Create thread
          a(href="/", class="btn btn-secondary") Cancel
block scripts
  script(src="https://cdn.quilljs.com/1.3.6/quill.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/slim-select/1.17.0/slimselect.min.js")
  script(src="/javascripts/create.js")